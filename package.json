{
  "name": "with-contexts",
  "version": "0.0.2",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p .",
    "prepublish": "tsc -p .",
    "dev": "tsc -p . -w",
    "test": "jest",
    "test:watch": "jest --watchAll --coverage"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/node": "^12.0.8",
    "husky": "^2.4.1",
    "jest": "^23.4.2",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.2",
    "ts-jest": "^23.0.1",
    "tslint-config-prettier": "^1.14.0",
    "typescript": "^3.1.6"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "setupFiles": [],
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "context",
    "hook",
    "shared memory",
    "service",
    "dependency injection"
  ]
}
